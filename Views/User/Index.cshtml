@model IEnumerable<User>
<h2>Users List</h2>

<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>UserId</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Register" asp-route-id="@user.UserId" class="btn btn-info btn-sm">Register</a>
                    <a asp-action="Login" asp-route-id="@user.UserId" class="btn btn-secondary btn-sm">Login</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Register" class="btn btn-info btn-sm">Register</a>
<a asp-action="Login" class="btn btn-secondary btn-sm">Login</a>
