@model IEnumerable<Category>

<h2>Categories List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Category</a>
</p>

<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().CategoryId)</th>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Description)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-primary btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-secondary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
